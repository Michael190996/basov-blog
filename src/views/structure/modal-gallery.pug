.modal-gallery.modal#galleryPhoto
   button(type="button" class="close" data-dismiss="modal") ×
   button(type="button" class="left") <
   button(type="button" class="right") >
   .block.target-close
      .photo.target-close
         img()
         .info
            if dataPhotos && dataPhotos.album
               .more
                  .logo(style=`background: url(${dataPhotos.album.background})`)
                  .subject
                  .detail= dataPhotos.album.title
            else
               a.more
                  .logo
                  .subject
                  .detail
            .theme
            .foot
               .date
                  i.fa.fa-clock-o
                  span
               a.link-origin(target="_blank") Оригинал